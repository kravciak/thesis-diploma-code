<%= form_for(@schema, html: {class:'form-horizontal'}) do |f| %>
  <% if @schema.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schema.errors.count, "error") %> prohibited this schema from being saved:</h2>

      <ul>
      <% @schema.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Name", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :root, "Root Element", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :root, class:'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :xsd, "Schema Definition", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :xsd, rows: 10, class:'form-control'  %>
    </div>
  </div>

  <!-- <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%#= f.file_field :file_xsd, class:'filestyle' %>
    </div>
  </div> -->

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class:'btn btn-default btn-block' %>
    </div>
  </div>
<% end %>