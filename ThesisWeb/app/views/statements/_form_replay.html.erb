<%= form_tag replay_statement_path(@statement), class:'form-horizontal', id:'replayf' do %>
<%= hidden_field_tag 'statement_id', @statement.id %>

    <div class="form-group">
      <div id="datetimepicker" class="input-group">
          <input type="text" class="form-control input-sm text-center dtpicker" name="start" placeholder="Start" />
          <span class="input-group-btn">
            <button id="counter" class="btn btn-sm btn-default" type="button">
              <span class="glyphicon glyphicon-repeat"></span>
            </button>
          </span>
          <input type="text" class="form-control input-sm text-center dtpicker" name="stop" placeholder="Stop" />
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Upload as</span>
        <input name="as" type="text" class="form-control input-sm" placeholder="Root Element">
        <span class="input-group-btn">
          <button class="btn btn-sm btn-primary" type="submit">
              <span class="glyphicon glyphicon-send"></span>
          </button>
        </span>
      </div>
    </div>
