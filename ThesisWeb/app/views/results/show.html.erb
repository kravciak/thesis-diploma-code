<% breadcrumb @result %>
<div class="row">
	<div class="col-md-8">
		<%= render 'shared/breadcrumbs' %>
	</div>
	<div class="col-md-4 text-right">
		<p><%= render 'controls_show' %></p>
	</div>
</div>
<div class="row">
	<div class="col-md-8">
		<dl class="dl-horizontal">
  		  <dt>Statement</dt>
  		  <dd><%= link_to @statement.name, @statement %></dd>

		  <dt>Expire in</dt>
		  <dd><%= time_to_expire(@result.time_id, @statement.ttl) %></dd>

  		  <dt>Received</dt>
  		  <dd><%= uuid_to_str(@result.time_id) %></dd>

  		  <dt>Event</dt>
  		  <dd><%= render partial: "shared/pp_json", object: @result.event %></dd>
		</dl>
	</div>
	<div class="col-md-4">
		<%= render 'form_replay' %>
	</div>
</div>